<body style="background-attachment: fixed; background-image: url('https://media-exp1.licdn.com/dms/image/C4D1BAQGat2o3SZblTQ/company-background_10000/0?e=2159024400&v=beta&t=lxoW-w75jY2G642ZY1Q9WiDgjYlt5VonrMkcn4U2pdI'); height: 100%; background-position: center; background-repeat: no-repeat; background-size: cover;">
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
