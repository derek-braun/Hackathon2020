    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.js"></script>
    <div style="margin-top: 40px;>
      <div class="row">
          <h3 style="color: white;" class="d-inline-block;" >
          <img class="d-inline-block;" style="float:left; max-height: 30px; margin-left: 40px; margin-right: 10px; padding-top: 5px;" src="https://cdn0.iconfinder.com/data/icons/flat-round-arrow-arrow-head/512/Red_Arrow_Left-2-512.png"/>
          February 15, 2020<img class="d-inline-block;" style="max-height: 25px; margin-left: 10px; margin-top: -3px; transform: scaleX(-1);" src="https://cdn0.iconfinder.com/data/icons/flat-round-arrow-arrow-head/512/Red_Arrow_Left-2-512.png"/>
          <a id="btnShowModal" data-target="#taskModal" data-toggle="modal"><img src="https://cdn3.iconfinder.com/data/icons/universal-3-1/614/14_-_Add-512.png" style="float: right; max-height: 60px; width: auto; margin-right: 240px;"></a></h3>
      </div>
    </div>

    <% for(var i = 0; i < tasks.length; i++){ %>
        <div class="card" style="margin-left: 20px; margin-top: 20px; max-width: 80%;">
          <div class="card-header"><%=time%><button type="submit" class="btn" style="color: red; float: right;">Remove</button></div>
          <div class="card-body"><%=title%></div>
          <div class="card-footer"><%=priority%></div>
        </div>
    <% } >

    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="modal" data-keyboard="false" data-backdrop="static" id="taskModal" tabindex="-1">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title">Add Task</h4>
                                <button class="close" data-dismiss="modal">&times;</button>
                            </div>
                            <div class="modal-body">
                                <form>
                                    <div class="form-group">
                                        <label for="taskTitle">Task Title:</label>
                                        <input type="text" class="form-control" id="taskTitle" placeholder="Title">
                                    </div>
                                    <div class="form-group">
                                        <label for="faculty">Priority:</label>
                                          <select class="form-control" id="faculty" name="faculty">
                                            <option value="Engineering">Notify Nurse</option>
                                            <option value="Science">Independent</option>
                                          </select>
                                    </div>
                                    <div class="form-group">
                                        <label for="taskTime">Time:</label>
                                        <input type="time" class="form-control" id="taskTime">
                                    </div>
                                    <p>Recording:</p>
                                    <div class="custom-file">
                                        <input type="file" accept="audio/*" class="custom-file-input" id="customFile">
                                        <label class="custom-file-label" for="customFile">Choose file</label>
                                    </div>
                                    <script>
                                        $(".custom-file-input").on("change", function() {
                                          var fileName = $(this).val().split("\\").pop();
                                          $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
                                        });
                                    </script>
                                </form>
                            </div>
                            <div class="modal-footer">
                                <button class="btn btn-primary">Create</button>
                                <button class="btn btn-primary" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>






